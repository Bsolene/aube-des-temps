  <%# f.input :check_out, as: :date %>
 <!--  <input class="datetimepicker" type="hidden" name="reservation[check_in]">
  <input class="datetimepicker" type="hidden" name="reservation[check_out]"> -->
  <%# f.button :submit, class: 'btn-green' %>
