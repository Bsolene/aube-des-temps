<!-- REVIEW -->

<h2 class="text-center">Avis (<%= @house.reviews.count %>)<%= render 'stars_average', house: @house %></h2>

<div class="flexbox">
  <div class="reviews-box">
      <% if !@house.reviews.nil? %>
        <% @house.reviews.each do |review| %>
          <div class="review-list">
            <div class="flexbox">
              <%= render 'stars', review: review %><h5><%= review.name %> </h5>
            </div>
            <p><%= review.content %></p>
          </div>
        <% end %>
      <% else %>
        <p>Soyez le premier à mettre un commentaire !</p>
      <% end %>

  </div>

  <div class="review-form">
    <h4>Laissez votre avis !</h4>
    <%= render 'review_form', house: @house, review: @review %>

  </div>
</div>

<%= link_to 'edit', edit_house_path(@house) %>
